<core:FragmentDefinition xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:u="sap.ui.unified"
  xmlns:core="sap.ui.core">
  <Dialog id="idAddResponsablesDialog" title="Agregar responsables Aysa" draggable="true">
    <FlexBox direction="Column" alignItems="Start" class="sapUiSmallMargin">
      <Label text="{i18n>direccionaysa}" required="true"/>
      <ComboBox id="idComboDirecciones" items="{AppJsonModel>/Combos/Direcciones}" change="onChangeDireccion" editable="true" selectedKey="{AppJsonModel>/GrupoResponsables/direccion_ID}">
        <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>descripcion}" />
      </ComboBox>
      <Label text="{i18n>gerenciaaysa}" required="true"/>
      <ComboBox id="idComboGerencias" items="{AppJsonModel>/Combos/Gerencias}" editable="true" selectedKey="{AppJsonModel>/GrupoResponsables/gerencia_ID}">
        <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>descripcion}" />
      </ComboBox>
      <Label text="{i18n>jefeinspeccion}" required="true"/>
      <MultiInput id="idMultiInputJefes" suggestionItems="{AppJsonModel>/Combos/JefeInspectores}" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="openJefeInspeccionDialog">
        <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>nombre}" />
      </MultiInput>      
      <Label text="{i18n>inspector}" required="true"/>
      <MultiInput id="idMultiInputInspectores" suggestionItems="{AppJsonModel>/Combos/Inspectores}" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="openInspectorDialog">
        <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>nombre}" />
      </MultiInput>     
      <Label text="{i18n>nropi}" required="true"/>
      <MultiComboBox id="idComboPIResponsable" items="{AppJsonModel>/PIs}" editable="true" selectedKeys="{AppJsonModel>/GrupoResponsables/pi}">
        <core:Item key="{AppJsonModel>pi}" text="{AppJsonModel>pi}" />
      </MultiComboBox>
    </FlexBox>
    <beginButton>
      <Button text="{i18n>dialogCloseButtonText}" press="closeResponsablesDialog" type="Default" />
    </beginButton>
    <endButton>
      <Button text="{i18n>dialogAceptButtonText}" press="confirmAddResponsables" type="Emphasized" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>