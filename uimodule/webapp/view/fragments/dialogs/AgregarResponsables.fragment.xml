<core:FragmentDefinition xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:u="sap.ui.unified"
  xmlns:core="sap.ui.core">
  <Dialog id="idAddResponsablesDialog" title="Agregar responsables Aysa" draggable="true">
    <FlexBox direction="Column" alignItems="Start" class="sapUiSmallMargin">
      <Label text="{i18n>direccionaysa}"/>
      <ComboBox items="{AppJsonModel>/Combos/Direcciones}" change="onChangeDireccion" editable="true" selectedKey="{AppJsonModel>/GrupoResponsables/direccion}">
        <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>descripcion}" />
      </ComboBox>
      <Label text="{i18n>gerenciaaysa}"/>
      <ComboBox id="idComboGerencias" items="{AppJsonModel>/Combos/Gerencias}" editable="true" selectedKey="{AppJsonModel>/GrupoResponsables/gerencia}">
        <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>descripcion}" />
      </ComboBox>
      <Label text="{i18n>jefeinspeccion}"/>
      <MultiInput id="idJefesInspeccion" suggestionItems="{AppJsonModel>/Combos/JefeInspectores}" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="openJefeInspeccionDialog">
        <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>nombre}" />
      </MultiInput>
      <!-- <MultiComboBox items="{AppJsonModel>/Combos/JefeInspectores}" editable="true" selectedKeys="{AppJsonModel>/GrupoResponsables/jefes_inspeccion}">
        <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>nombre}" />
      </MultiComboBox>       -->
      <Label text="{i18n>inspector}"/>
      <MultiInput id="idInspectores" suggestionItems="{AppJsonModel>/Combos/Inspectores}" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="openInspectorDialog">
        <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>nombre}" />
      </MultiInput>
      <!-- <MultiComboBox items="{AppJsonModel>/Combos/Inspectores}" editable="true" selectedKeys="{AppJsonModel>/GrupoResponsables/inspectores}">
        <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>nombre}" />
      </MultiComboBox> -->
      <Label text="{i18n>nropi}"/>
      <MultiComboBox items="{AppJsonModel>/PI}" editable="true" selectedKeys="{AppJsonModel>/GrupoResponsables/pi}">
        <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>descripcion}" />
      </MultiComboBox>
    </FlexBox>
    <beginButton>
      <Button text="{i18n>dialogCloseButtonText}" press="closeResponsablesDialog" type="Default" />
    </beginButton>
    <endButton>
      <Button text="{i18n>dialogAceptButtonText}" press="confirmAddResponsables" type="Emphasized" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>