<core:FragmentDefinition xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:u="sap.ui.unified"
  xmlns:core="sap.ui.core">
  <Dialog id="idAddOCDialog" title="Agregar orden de compra" draggable="true">
    <FlexBox direction="Column" alignItems="Start" class="sapUiSmallMargin">
      <Label text="{i18n>nroordencompra}"/>
      <Input value="{AppJsonModel>/OrdenCompra/nro_oc}" editable="true"/>
      <Label text="{i18n>fechaordencompra}"/>
      <DatePicker displayFormat="dd/MM/yyyy" dateValue="{AppJsonModel>/OrdenCompra/fecha}"/>
      <Label text="{i18n>moneda}"/>
      <ComboBox items="{AppJsonModel>/Monedas}" editable="true" selectedKey="{AppJsonModel>/OrdenCompra/moneda}">
        <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>descripcion}" />
      </ComboBox>
      <Label text="{i18n>tasa}"/>
      <Input value="{AppJsonModel>/OrdenCompra/tipo_cambio}" editable="true" type="Number"/>
      <Label text="{i18n>noredetermina}"/>
      <Switch state="{AppJsonModel>/OrdenCompra/no_redetermina}" customTextOn="Si" customTextOff="No"/>
    </FlexBox>
    <beginButton>
      <Button text="{i18n>dialogCloseButtonText}" press="closeOCDialog" type="Default" />
    </beginButton>
    <endButton>
      <Button text="{i18n>dialogAceptButtonText}" press="confirmAddOC" type="Emphasized" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>