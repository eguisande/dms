<core:FragmentDefinition xmlns:core="sap.ui.core"
  xmlns:form="sap.ui.layout.form"
  xmlns:l="sap.ui.layout"
  xmlns="sap.m">
  <form:SimpleForm title="{i18n>responsablesaysa}" editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="true">
    <form:content>
      <Table items="{AppJsonModel>/responsables}" fixedLayout="false" width="100%">
        <columns>
          <!-- <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
            <Text text="{i18n>nropi}" />
          </Column> -->
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>direccionaysa}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>gerenciaaysa}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>jefeinspeccion}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>inspector}" />
          </Column>
        </columns>
        <items>
          <ColumnListItem vAlign="Middle">
            <cells>
              <!-- <MultiComboBox items="{AppJsonModel>/PIs}" editable="false" selectedKeys="{AppJsonModel>pi}">
                <core:Item key="{AppJsonModel>pi}" text="{AppJsonModel>pi}" />
              </MultiComboBox> -->
              <ComboBox items="{AppJsonModel>/Combos/Direcciones}" editable="false" selectedKey="{AppJsonModel>direccion_ID}">
                <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>descripcion}" />
              </ComboBox>
              <ComboBox items="{AppJsonModel>/Combos/Gerencias}" editable="false" selectedKey="{AppJsonModel>gerencia_ID}">
                <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>descripcion}" />
              </ComboBox>
              <MultiComboBox items="{AppJsonModel>/Combos/JefeInspectores}" editable="false" selectedKeys="{AppJsonModel>jefes}">
                <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>nombre}" />
              </MultiComboBox>
              <MultiComboBox items="{AppJsonModel>/Combos/Inspectores}" editable="false" selectedKeys="{AppJsonModel>inspectores}">
                <core:Item key="{AppJsonModel>ID}" text="{AppJsonModel>nombre}" />
              </MultiComboBox>
              <HBox>
                <Button class="sapUiTinyMargin" tooltip="{i18n>eliminar}" icon="sap-icon://delete" type="Reject" press="deleteOC" visible="{=${AppJsonModel>/ObraDetalle/estado_ID} === 'BO' &amp;&amp; ${AppJsonModel>/Permisos/edit}}"/>
              </HBox>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
      <Link press="editStepFive" text="{i18n>editar}" visible="{=${AppJsonModel>/ObraDetalle/estado_ID} === 'BO' &amp;&amp; ${AppJsonModel>/Permisos/edit}}">
        <layoutData>
          <l:GridData linebreak="true"/>
        </layoutData>
      </Link>
    </form:content>
  </form:SimpleForm>
</core:FragmentDefinition>