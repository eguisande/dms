<core:FragmentDefinition xmlns:core="sap.ui.core"
  xmlns:form="sap.ui.layout.form"
  xmlns:l="sap.ui.layout"
  xmlns="sap.m">
  <form:SimpleForm title="{i18n>pi}" editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="true">
    <form:content>
      <Table items="{AppJsonModel>/proyectos_inversion}" fixedLayout="false" width="100%">        
        <columns>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>nrop3}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>nropi}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>tipopi}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>sistemaContratacion}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>importe}" />
            <footer >
               <ObjectStatus text="{path: 'AppJsonModel>/monto_total', formatter: '.formatter.formatQuantity'} ARS" />
            </footer>
          </Column>          
        </columns>
        <items>
          <ColumnListItem vAlign="Middle">
            <cells>
              <Text text="{AppJsonModel>p3/codigo}" />
              <Text text="{AppJsonModel>pi}" />
              <Text text="{AppJsonModel>tipo_pi/descripcion}" />
              <Text text="{AppJsonModel>sistema_contratacion/descripcion}" />
              <Text text="{AppJsonModel>monto} {AppJsonModel>moneda_ID}" />             
            </cells>
          </ColumnListItem>
        </items>
      </Table>
      <Link press="editStepFive" text="{i18n>editar}" visible="{=${AppJsonModel>/ObraDetalle/estado_ID} === 'BO' &amp;&amp; ${AppJsonModel>/Permisos/edit}}">
        <layoutData>
          <l:GridData linebreak="true"/>
        </layoutData>
      </Link>
    </form:content>
  </form:SimpleForm>
</core:FragmentDefinition>