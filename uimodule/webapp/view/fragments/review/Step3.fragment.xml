<core:FragmentDefinition xmlns:core="sap.ui.core"
  xmlns:form="sap.ui.layout.form"
  xmlns:l="sap.ui.layout"
  xmlns="sap.m">
  <form:SimpleForm title="P3" editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="true">
    <form:content>
      <Table items="{AppJsonModel>/p3s}" fixedLayout="false" width="100%">
        <columns>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>nrop3}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>nropi}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>montopi}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>tipocontrato}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>tipofluido}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>tipoobra}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>partido}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>sistema}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>acumar}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>acopio}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>anticipofinanciero}" />
          </Column>
        </columns>
        <items>
          <ColumnListItem vAlign="Middle">
            <cells>
              <Text text="{AppJsonModel>codigo}" />
              <Text text="{AppJsonModel>nros_pi}" />
              <Text text="{AppJsonModel>montos_pi}" />
              <Text text="{AppJsonModel>tipo_contrato/descripcion}" />
              <Text text="{AppJsonModel>fluido/descripcion}" />
              <Text text="{AppJsonModel>tipo_obra/descripcion}" />
              <Text text="{AppJsonModel>partido/descripcion}" />
              <Text text="{AppJsonModel>sistema/descripcion}" />
              <Switch state="{AppJsonModel>acumar}" customTextOn="Si" customTextOff="No" enabled="false"/>
              <Switch state="{AppJsonModel>acopio}" customTextOn="Si" customTextOff="No" enabled="false"/>
              <Text text="{AppJsonModel>anticipo_financiero}%"/>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </form:content>
  </form:SimpleForm>
  <form:SimpleForm editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" singleContainerFullSize="true">
    <form:content>
      <Table items="{AppJsonModel>/importes_p3}" fixedLayout="false" width="100%">
        <headerToolbar>
          <Toolbar>
            <Title text="{i18n>importesp3}" titleStyle="H6"/>
            <ToolbarSpacer/>            
          </Toolbar>
        </headerToolbar>
        <columns>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>nrop3}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>importe}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>importears}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>tipocambio}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>moneda}" />
          </Column>
          <Column minScreenWidth="Tablet" demandPopin="true">
            <Text text="{i18n>porcentajeponderacion}" />
          </Column>          
        </columns>
        <items>
          <ColumnListItem vAlign="Middle">
            <cells>
              <Text text="{AppJsonModel>p3/codigo}"/>
              <Text text="{AppJsonModel>importe}"/>
              <Text text="{AppJsonModel>importe_ars}"/>
              <Text text="{AppJsonModel>tipo_cambio}"/>
              <Text text="{AppJsonModel>moneda_ID}"/>
              <Text text="{AppJsonModel>porcentaje_ponderacion}%"/>             
            </cells>
          </ColumnListItem>
        </items>
      </Table>
      <Link press="editStepThree" text="{i18n>editar}" visible="{=${AppJsonModel>/ObraDetalle/estado_ID} === 'BO' &amp;&amp; ${AppJsonModel>/Permisos/edit}}">
        <layoutData>
          <l:GridData linebreak="true"/>
        </layoutData>
      </Link>
    </form:content>
  </form:SimpleForm>
</core:FragmentDefinition>